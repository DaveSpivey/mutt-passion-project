<div class="mutt-display">
  <div id="pic<%= mutt.id %>" class="pic">
    <% if mutt != Mutt.first %>
      <a id="previous" class="carousel" href="mutts/<%= mutt.id - 1 %>">previous</a>
    <% end %>
    <a href="mutts/<%= mutt.id %>"><img src="<%= mutt.pictures.first.url %>"></a>
    <% if mutt != Mutt.last %>
      <a id="next" class="carousel" href="mutts/<%= mutt.id + 1 %>">next</a>
    <% end %>
    <% if guess %>
      <h3>You guessed this dog's breed is: <a href="<%= guess.link %>"><%= guess.name %></a><br>
      <h4>Other users thought this dog was:</h4>
      <ul>
        <% mutt.what.each do |breed| %>
          <li><%= breed[0] %>: <%= breed[1] %> votes</li>
        <% end %>
      </ul>
    <% else %>
      <a id="guess" href="mutts/<%= @mutt.id %>/breeds">Guess This Mutt's Breed</a>
    <% end %>
  </div>
</div>