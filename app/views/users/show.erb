<h2>Welcome <%= current_user.name %>!</h2>

<% if flash[:mutt_error] %>
  <h2><%= flash[:mutt_error] %><h2>
<% else %>
  <h2 id="your-mutts">Your Mutts:</h2>
<% end %>

<% current_user.mutts.each do |mutt| %>
  <p><a href="/mutts/<%= mutt.id %>"><%= mutt.name %></a></p>
<% end %>

<form id="new-mutt" method="GET" action="/mutts/new">
  <input type="submit" value="Add a New Mutt">
</form>

